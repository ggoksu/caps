#!/bin/bash

root_dir=$(cd $(dirname $BASH_SOURCE)/.. && pwd)
source $root_dir/bin/common
common::initialize

set -e

usage () {
    echo -e "\n${BLUE}USAGE: caps-info\n"
    echo -e "    This utility will display useful information about the current environment."
    echo -e "${NC}"
}

while [[ $# -gt 0 ]]; do
    case "$1" in
        -v|--debug)
            set -x
            ;;
        *)
            usage
            exit 1
            ;;
    esac
    shift
done

common::read_terraform_output
common::show_env

deployment_info_path=$root_dir/deployments/$deployment_name/show_info
[[ -e $deployment_info_path ]] && source $deployment_info_path

echo -e "${NC}"