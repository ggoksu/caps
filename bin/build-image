#!/bin/bash

usage () {
    echo -e "\nUSAGE: build-image -i|--iaas <IAAS_PROVIDER> [ -u|--upload ] [ -r|--regions <REGIONS> ] \\n"
    echo -e "    -i|--iaas <IAAS_PROVIDER>  The iaas provider for which images will be built.\n"
    echo -e "    -u|--upload                Uploads the built image to the IaaS.\n"
    echo -e "    -r|--regions <REGIONS>     Comma separated list of the iaas provider's regions for which"
    echo -e "                               images will be built. This does not apply to all providers and"
    echo -e "                               will be ignored where appropriate."
    echo -e "${NC}"
}

root_dir=$(cd $(dirname $BASH_SOURCE)/.. && pwd)
action=build

if [[ $# -eq 0 ]]; then
    usage
    exit 1
else
    while [[ $# -gt 0 ]]; do
        case "$1" in
            -h|--help|help)
                usage
                exit 0
                ;;
            -u|--upload)
                action=upload
                ;;
            -i|--iaas)
                iaas_provider=$2
                if [[ -z $iaas_provider ]]; then
                    echo -e "\nERROR! IAAS provider name missing.\n"
                    exit 1
                fi
                shift
                ;;
            -r|--regions)
                region_list=$2
                if [[ -z $iaas_provider ]]; then
                    echo -e "\nERROR! IAAS provider region names missing.\n"
                    exit 1
                fi
                shift
                ;;
            *)
                usage
                exit 1
                ;;
        esac
        shift
    done
fi

if [[ ! -e $root_dir/lib/inceptor/images/build/${action}-${iaas_provider}-image.sh ]]; then
    echo -e "\nERROR! IAAS '$iaas_provider' is not supported. The supported IAAS' are:\n"
    ls -l $root_dir/lib/inceptor/images/ | awk '/^[-d].*-image.sh/{ print "    "$9 }' | sed 's|\(.*\)build-\(.*\)-image.sh|\1\2|'
    echo
    exit 1
fi

export build_log_dir=$root_dir/log
mkdir -p $build_log_dir

$root_dir/lib/inceptor/images/build/${action}-${iaas_provider}-image.sh $region_list
